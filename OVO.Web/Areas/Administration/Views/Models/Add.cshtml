@using OVO.Web.Areas.Administration.ViewModels
@model ModelViewModel

@{
    ViewBag.Title = @OVO.Web.Resources.Lang.Add;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 margin-left-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">@OVO.Web.Resources.Lang.Add</h3>
            </div>
            <div class="panel-body">

                @using (@Html.BeginForm("Add", "Models", FormMethod.Post))
                {
                    <p>
                        @Html.LabelFor(x => x.ManufacturerName)
                        @Html.DropDownListFor(x => x.ManufacturerName, new SelectList(Model.Manufacturers, "Name", "Name"))
                        @Html.ValidationMessageFor(x => x.ManufacturerName, "", new { @class = "text-danger" })
                    </p>

                    @Html.LabelFor(x => x.ModelName);
                    @Html.EditorFor(x => x.ModelName);
                    @Html.ValidationMessageFor(x => x.ModelName, "", new { @class = "text-danger" })

                    @Html.AntiForgeryToken();
                    <button type="submit" class="btn btn-success">@OVO.Web.Resources.Lang.Add</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}