@using OVO.Web.Areas.Administration.ViewModels
@model UserViewModel

@{
    ViewBag.Title = @OVO.Web.Resources.Lang.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span4 margin-left-3">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">@OVO.Web.Resources.Lang.Delete</h3>
        </div>
        <div class="panel-body">

            <p>@OVO.Web.Resources.Lang.AreSure:</p>

            <p>@OVO.Web.Resources.Lang.User: @Model.Email</p>

            @using (@Html.BeginForm("Delete", "Users", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Email)
                @Html.AntiForgeryToken();
                <button type="submit" class="btn btn-danger">@OVO.Web.Resources.Lang.Delete</button>
            }
        </div>
    </div>
</div>