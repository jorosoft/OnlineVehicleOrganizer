@using OVO.Web.ViewModels.Vehicle
@model CronJobViewModel

@{
    ViewBag.Title = @OVO.Web.Resources.Lang.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4 margin-left-3">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">@OVO.Web.Resources.Lang.Edit</h3>
        </div>
        <div class="panel-body">

            @using (@Html.BeginForm("EditCronJob", "Vehicle", FormMethod.Post))
            {
                <p>
                    @Html.LabelFor(x => x.Name)
                    @Html.EditorFor(x => x.Name)
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </p>

                                <p>
                                    @Html.LabelFor(x => x.StartDate)
                                    @Html.EditorFor(x => x.StartDate)
                                    @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
                                </p>

                                <p>
                                    @Html.LabelFor(x => x.PeriodInMonths)
                                    @Html.EditorFor(x => x.PeriodInMonths)
                                    @Html.ValidationMessageFor(x => x.PeriodInMonths, "", new { @class = "text-danger" })
                                </p>

                                <p>
                                    @Html.LabelFor(x => x.Description)
                                    @Html.TextAreaFor(x => x.Description)
                                </p>

                                @Html.HiddenFor(x => x.Id);
                @Html.HiddenFor(x => x.VehicleId);
                @Html.AntiForgeryToken();
                <button type="submit" class="btn btn-warning">@OVO.Web.Resources.Lang.Edit</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}