@using OVO.Web.ViewModels.Vehicle
@model VehicleEventViewModel

@{
    ViewBag.Title = "EditVehicleEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="bannerSection" style="background:url(../../Resources/Images/banner/details.png) no-repeat center center #000;">
    <div class="container">
        <h1 id="pageTitle">
            Edit Vehicle Event
        </h1>
    </div>
</section>

<div class="span4 margin-left-3">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <p></p>
        </div>
        <div class="panel-body">

            @using (@Html.BeginForm("EditVehicleEvent", "Vehicle", FormMethod.Post))
            {
                <p>
                    @Html.LabelFor(x => x.Name)
                    @Html.EditorFor(x => x.Name)
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </p>

                                <p>
                                    @Html.LabelFor(x => x.Date)
                                    @Html.EditorFor(x => x.Date)
                                    @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
                                </p>

                                <p>
                                    @Html.LabelFor(x => x.Description)
                                    @Html.TextAreaFor(x => x.Description)
                                </p>

                                @Html.HiddenFor(x => x.Id);
                @Html.HiddenFor(x => x.VehicleId);
                @Html.AntiForgeryToken();
                <button type="submit" class="btn btn-warning">@OVO.Web.Resources.Lang.Edit</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}