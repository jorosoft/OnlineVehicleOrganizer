@using OVO.Web.ViewModels.Vehicle
@model VehicleEventViewModel

@{
    ViewBag.Title = "EditVehicleEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 margin-left-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">@OVO.Web.Resources.Lang.Edit</h3>
            </div>
            <div class="panel-body">

                @using (@Html.BeginForm("EditVehicleEvent", "Vehicle", FormMethod.Post))
                {
                    <p>
                        @Html.LabelFor(x => x.Name)
                        @Html.EditorFor(x => x.Name)
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </p>

                        <p>
                            @Html.LabelFor(x => x.Date)
                            @Html.EditorFor(x => x.Date)
                            @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
                        </p>

                        <p>
                            @Html.LabelFor(x => x.Description)
                            @Html.TextAreaFor(x => x.Description)
                        </p>

                        @Html.HiddenFor(x => x.Id);
                        @Html.HiddenFor(x => x.VehicleId);
                    @Html.AntiForgeryToken();
                    <button type="submit" class="btn btn-warning">@OVO.Web.Resources.Lang.Edit</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

