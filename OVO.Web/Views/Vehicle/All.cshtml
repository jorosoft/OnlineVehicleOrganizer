@using OVO.Web.ViewModels.Vehicle
@using GridMvc.Html
@model VehiclesListViewModel

@{
    ViewBag.Title = @OVO.Web.Resources.Lang.AllVehicles;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="bannerSection" style="background:url(../../Resources/Images/banner/details.png) no-repeat center center #000;">
    <div class="container">
        <h1 id="pageTitle">
            @OVO.Web.Resources.Lang.AllVehicles
        </h1>
    </div>
</section>

<div class="span8 margin-left-1">
    <div class="panel panel-info">
        <div class="panel-heading">
            <p></p>            
        </div>
        <div class="panel-body">

            @Html.ActionLink(@OVO.Web.Resources.Lang.AddVehicle, "Add", null, new { @class = "btn btn-large btn-info" })

            <div>
                @Html.Grid(Model.Vehicles).Columns(columns =>
        {
            columns.Add(x => x.ManufacturerName).Titled(@OVO.Web.Resources.Lang.Manufacturer).SetWidth(50);
            columns.Add(x => x.ModelName).Titled(@OVO.Web.Resources.Lang.Model).SetWidth(50);
            columns.Add(x => x.RegNumber).Titled(@OVO.Web.Resources.Lang.RegNumber).SetWidth(50);
            columns.Add()
       .Encoded(false)
       .Sanitized(false)
       .SetWidth(50)
       .RenderValueAs(x => @<div id="details-btn">@Html.ActionLink(@OVO.Web.Resources.Lang.Details, "Details", new { vehicleId = x.Id }, new { @class = "gridbutton" })</div>);
            columns.Add()
       .Encoded(false)
       .Sanitized(false)
       .SetWidth(50)
       .RenderValueAs(x => @<div id="details-btn">@Html.ActionLink(@OVO.Web.Resources.Lang.Edit, "Edit", new { vehicleId = x.Id }, new { @class = "gridbutton" })</div>);
            columns.Add()
       .Encoded(false)
       .Sanitized(false)
       .SetWidth(50)
       .RenderValueAs(x => @<div id="details-btn">@Html.ActionLink(@OVO.Web.Resources.Lang.Delete, "Delete", new { vehicleId = x.Id }, new { @class = "gridbutton" })</div>);
        }).WithPaging(10).Sortable().EmptyText(@OVO.Web.Resources.Lang.NoVeh)
            </div>
        </div>
    </div>
</div>